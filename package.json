{
  "name": "platform-theme-dev",
  "version": "0.1.0",
  "description": "Next EUROPA Drupal 7 theme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ec-europa/platform-theme-dev.git"
  },
  "homepage": "https://github.com/ec-europa/platform-theme-dev",
  "private": true,
  "license": "EUPL-1.1",
  "scripts": {
    "bower": "./node_modules/.bin/bower",
    "postinstall": "bower install",
    "eslint": "eslint -f stylish src/**/*.js scripts/**/*.js test/**/*.js; exit 0",
    "stylelint": "stylelint src/**/*.scss --syntax scss; exit 0",
    "lint": "npm run eslint  && npm run stylelint",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "build": "node ./scripts/build.js"
  },
  "devDependencies": {
    "async": "^1.5.2",
    "autoprefixer": "^6.3.3",
    "babel-eslint": "^5.0.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "bower": "^1.7.7",
    "commander": "^2.9.0",
    "conventional-changelog-cli": "^1.1.1",
    "cpy": "^4.0.0",
    "cssnano": "^3.5.2",
    "del": "^2.2.0",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^6.0.2",
    "eslint-plugin-react": "^4.1.0",
    "ghooks": "^1.0.3",
    "glob": "^7.0.0",
    "gulp": "^3.9.1",
    "gulp-cache": "0.4.2",
    "gulp-change": "^1.0.0",
    "gulp-concat": "^2.6.0",
    "gulp-imagemin": "^2.4.0",
    "gulp-load-plugins": "^1.2.0",
    "gulp-postcss": "^6.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-rollup": "^1.7.0",
    "gulp-sass": "^2.2.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "node-sass-import-once": "^1.2.0",
    "postcss-sprites": "^3.1.0",
    "postcss-svgo": "^2.1.2",
    "postcss-url": "^5.1.1",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-replace": "^1.1.0",
    "stylelint": "^4.4.0",
    "stylelint-config-standard": "^3.0.0",
    "validate-commit-msg": "^2.0.0"
  },
  "engines": {
    "node": ">=5.0",
    "npm": "~3.3.6"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  }
}
